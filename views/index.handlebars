<div class="container">
  <h1>Burgers!</h1>

  <div class="row">
    <div class="col">
      <h2>Add your burger!</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h2>Burgers waiting to be devoured.</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Burgers that were devoured.</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devour=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>
